<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_fml_create"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor_low" >

    <TextView
        android:id="@+id/dialog_left_fml_num_txt"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/backgroundColor_low"
        android:gravity="center"
        android:text="是否同意加入家庭"
        android:textColor="@color/green" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_left_fml_num_txt"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/dialog_left_fml_num_disagree"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1" >

            <Button
                android:id="@+id/dialog_left_fml_num_but_disagree"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true"
                android:layout_margin="15dp"
                android:background="@drawable/auto_dialog_btn"
                android:text="不同意"
                android:textColor="#41AFAF" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/dialog_left_fml_num_agree"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1" >

            <Button
                android:id="@+id/dialog_left_fml_num_but_agree"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true"
                android:layout_margin="15dp"
                android:background="@drawable/auto_dialog_btn"
                android:text="同意"
                android:textColor="#41AFAF" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>