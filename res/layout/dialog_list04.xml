<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_fml_create"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor_low" >

    <TextView
        android:id="@+id/dialog_list04_txt"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/backgroundColor_low"
        android:gravity="center"
        android:text="空调遥控"
        android:textColor="@color/green" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_list04_txt"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1" >
                <Button
                    android:id="@+id/dialog_list04_temp01"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerInParent="true"
                    android:layout_margin="5dp"
                    android:background="@drawable/auto_dialog_btn"
                    android:text="温度+"
                    android:textColor="#41AFAF" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/dialog_list04_pattern"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerInParent="true"
                    android:layout_margin="5dp"
                    android:background="@drawable/auto_dialog_btn"
                    android:text="模式"
                    android:textColor="#41AFAF" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/dialog_list04_temp02"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerInParent="true"
                    android:layout_margin="5dp"
                    android:background="@drawable/auto_dialog_btn"
                    android:text="温度-"
                    android:textColor="#41AFAF" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/dialog_list04_power"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerInParent="true"
                    android:layout_margin="5dp"
                    android:background="@drawable/auto_dialog_btn"
                    android:text="关机"
                    android:textColor="#41AFAF" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>