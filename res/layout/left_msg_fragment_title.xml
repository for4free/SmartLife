<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="46dp"
    android:background="@color/backgroundColor"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/left_msg_fragment_title_left"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_weight="1" 
       >

        <TextView
            android:id="@+id/left_msg_fragment_title_left_txt"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="警告消息"
            android:textColor="@color/green"
           />
        <ImageView 
            android:id="@+id/left_msg_fragment_title_left_line"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/green"
            android:layout_alignParentBottom="true"
            android:visibility="visible"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/left_msg_fragment_title_right"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_weight="1" 
        >

        <TextView
            android:id="@+id/left_msg_fragment_title_right_txt"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="系统消息"
            android:textColor="#000000" 
           />
        <ImageView 
            android:id="@+id/left_msg_fragment_title_right_line"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/green"
            android:layout_alignParentBottom="true"
            android:visibility="invisible"
            />
    </RelativeLayout>

</LinearLayout>