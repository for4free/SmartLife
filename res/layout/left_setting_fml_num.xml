<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor" >

    <LinearLayout
        android:id="@+id/left_fml_num_text_lin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColor"
        android:orientation="vertical"
        android:visibility="invisible" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="9"
            android:background="@color/backgroundColor_low"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/left_fml_num_text_ttt"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="家庭信息"
                android:textColor="@color/green" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="4" >

                <Button
                    android:id="@+id/left_fml_num_btn"
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/fml_btn"
                    android:text="退出"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/left_fml_num_btn_add"
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/fml_btn"
                    android:text="添加成员"
                    android:visibility="invisible" />
            </RelativeLayout>
        </LinearLayout>

        <ListView
            android:id="@+id/left_fml_num_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >
        </ListView>
    </LinearLayout>

    <TextView
        android:id="@+id/left_fml_num_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="审核还未通过或者网络不通"
        android:visibility="invisible" />

</RelativeLayout>